# UserFrosting Payment Sprinkle Environment Variables
# Copy this file to .env and update with your actual credentials

# Stripe Configuration
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# PayPal Configuration
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# Apple Pay Configuration
APPLE_PAY_MERCHANT_ID=merchant.com.yourcompany
APPLE_PAY_CERTIFICATE_PATH=/path/to/apple-pay-cert.pem

# Google Pay Configuration
GOOGLE_PAY_MERCHANT_ID=your_google_pay_merchant_id
GOOGLE_PAY_MERCHANT_NAME=Your Business Name
