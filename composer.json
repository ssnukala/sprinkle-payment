{
    "name": "ssnukala/sprinkle-payment",
    "type": "userfrosting-sprinkle",
    "description": "Payment Module for UserFrosting 6.0 - Integration with PayPal, Stripe, Apple Pay, Google Pay, and Manual Check payments",
    "keywords": [
        "php user management",
        "userfrosting",
        "sprinkle",
        "payment",
        "paypal",
        "stripe",
        "apple pay",
        "google pay",
        "e-commerce"
    ],
    "homepage": "https://github.com/ssnukala/sprinkle-payment",
    "license": "MIT",
    "authors": [
        {
            "name": "Srinivas Nukala",
            "homepage": "https://srinivasnukala.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "userfrosting/framework": "^6.0",
        "userfrosting/sprinkle-core": "^6.0",
        "userfrosting/sprinkle-account": "^6.0",
        "userfrosting/sprinkle-admin": "^6.0",
        "stripe/stripe-php": "^10.0",
        "paypal/rest-api-sdk-php": "^1.14"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpstan/phpstan": "^1.1",
        "phpunit/phpunit": "^10.0",
        "mockery/mockery": "^1.2",
        "fakerphp/faker": "^1.17"
    },
    "minimum-stability": "beta",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "UserFrosting\\Sprinkle\\Payment\\": "app/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "UserFrosting\\Sprinkle\\Payment\\Tests\\": "app/tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpcs": "php-cs-fixer fix --dry-run --diff",
        "phpstan": "phpstan analyse app/src --level=5"
    }
}
